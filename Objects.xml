<?xml version="1.0" ?>

<!-- Lights in world space -->
<lights>
  <point>
    <location x="3" y="5" z="-15"/>
  </point>
</lights>

<!-- Camera location in world space -->
<camera>
  <location x="0" y="-0.25" z="0"/>
</camera>

<!-- Image plane locations.  Should specify the top left corner and work in the positive x/y/z directions -->
<image_plane>
  <corner x="-1" y="1" z="-2" />j
  <length>2</length>
  <width>0</width>
  <height>2</height>
</image_plane>
  

<!-- Geometry in world space and color parsing -->
<objects>
  <sphere>
    <center x="0" y="0" z="-16"/>
    <radius>2</radius>
    <color>RED</color>
    <material>REFLECTIVE</material>
  </sphere>

  <sphere>
    <center x="3" y="-1" z="-14"/>
    <radius>1</radius>
    <color>RED</color>
    <material>REFLECTIVE</material>
  </sphere>

  <sphere>
    <center x="-3" y="-1" z="-14"/>
    <radius>1</radius>
    <color>RED</color>
    <material>NONE</material>
  </sphere>

  <!-- Back wall -->
  <triangle>
    <vertex x="-8" y="-2" z="-20"/>
    <vertex x="8" y="-2" z="-20"/>
    <vertex x="8" y="10" z="-20"/>
    <color>BLUE</color>
    <material>NONE</material>
  </triangle>

  <triangle>
    <vertex x="-8" y="-2" z="-20"/>
    <vertex x="8" y="10" z="-20"/>
    <vertex x="-8" y="10" z="-20"/>
    <color>BLUE</color>
    <material>NONE</material>
  </triangle>

  <!-- Floor -->
  <triangle>
    <vertex x="-8" y="-2" z="-20"/>
    <vertex x="8" y="-2" z="-10"/>
    <vertex x="8" y="-2" z="-20"/>
    <color>WHITE</color>
    <material>NONE</material>
  </triangle>

  <triangle>
    <vertex x="-8" y="-2" z="-20"/>
    <vertex x="-8" y="-2" z="-10"/>
    <vertex x="8" y="-2" z="-10"/>
    <color>WHITE</color>
    <material>NONE</material>
  </triangle>
  
  <!-- Right red triangle -->
  <triangle>
    <vertex x="8" y="-2" z="-20"/>
    <vertex x="8" y="-2" z="-10"/>
    <vertex x="8" y="10" z="-20"/>
    <color>RED</color>
    <material>NONE</material>
  </triangle>
</objects>

